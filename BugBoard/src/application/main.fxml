<VBox alignment="TOP_CENTER" prefHeight="900" prefWidth="1600" style="-fx-background-color: #ffffff;" stylesheets="@application.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainController">
   <children>
      <HBox prefHeight="65.0" prefWidth="1600.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="800.0">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="130.0" prefWidth="250.0" spacing="10.0" style="-fx-background-color: #ffffff; -fx-background-radius: 0 0 100 0;">
                     <effect>
                        <DropShadow>
                           <color>
                              <Color opacity="0.4694656431674957" />
                           </color>
                        </DropShadow>
                     </effect>
                     <children>
                        <ImageView fitHeight="30.0" fitWidth="30.0">
                           <image>
                              <Image url="@BugBoardIcon.png" />
                           </image>
                        </ImageView>
                        <Label style="-fx-font-size: 30;" text="BugBoard" />
                     </children>
                     <padding>
                        <Insets left="25.0" />
                     </padding>
                  </HBox>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="800.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" styleClass="new-button" text="+ New Project" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </HBox>
   </children>
